
<div class="container">
  <div class=" d-flex align-items-end flex-column m-4">
    <%= link_to' Add User', new_user_path,class:"btn btn-success btn-sm" %>
  </div>
  <div class="table-responsive">

  <table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Position</th>
      <th scope="col">Company Name</th>
      <th colspan="3" class="text-center">Action</th>

    </tr>
    </thead>
    <tbody>

    <%@users.each do |user| %>
      <tr>
        <th scope="row">  <%=user.id %></th>
        <th scope="row">  <%=user.first_name %></th>
        <th scope="row">  <%=user.last_name %></th>
        <th scope="row">  <%=user.phone_number %></th>
        <th scope="row">  <%=user.user_type %></th>
        <th scope="row"> <%=user.company.business_name %></th></th>
        <th scope="row">  <%=link_to 'Show',user %></th>
        <th scope="row">  <%=link_to 'Edit',edit_user_path(user) %></th>
        <th scope="row">  <%=link_to 'Delete',user_path(user),data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %>
        </th>
      </tr>
    <% end %>

    </tbody>
  </table>
  </div>
</div>